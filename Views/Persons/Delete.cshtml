@model traq_web_project_assessment.ViewModels.PersonViewModel

@{
    ViewData["Title"] = "Delete Person";
}

<div class="mb-4">
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Details
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Delete Person</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <h5><i class="fas fa-exclamation-circle"></i> Are you sure you want to delete this person?</h5>
                    <p class="mb-0">This action cannot be undone.</p>
                </div>

                <h5>Person Details:</h5>
                <dl class="row">
                    <dt class="col-sm-3">Full Name:</dt>
                    <dd class="col-sm-9">@Model.FullName</dd>

                    <dt class="col-sm-3">ID Number:</dt>
                    <dd class="col-sm-9">@Model.IdNumber</dd>

                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <dt class="col-sm-3">Phone:</dt>
                        <dd class="col-sm-9">@Model.PhoneNumber</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <dt class="col-sm-3">Address:</dt>
                        <dd class="col-sm-9">@Model.Address</dd>
                    }

                    <dt class="col-sm-3">Accounts:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">@Model.AccountCount</span>
                    </dd>
                </dl>

                @if (Model.AccountCount > 0)
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Note:</strong> This person has @Model.AccountCount account(s). 
                        All accounts must be closed or deleted before the person can be deleted.
                    </div>
                }

                <hr />

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
