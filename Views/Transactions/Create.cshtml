@model traq_web_project_assessment.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Create Transaction";
}

<div class="container" style="background-color: #e9ecef; padding: 40px; min-height: 100vh; border-radius: 15px;">
    <div class="mb-4">
        <a asp-controller="Accounts" asp-action="Details" asp-route-id="@Model.AccountId" class="btn btn-secondary" style="border-radius: 10px;">
            <i class="fas fa-arrow-left"></i> Back to Account
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow" style="border-radius: 15px; border: none; background-color: white;">
                <div class="card-header text-white" style="background-color: #2F527A; border-radius: 15px 15px 0 0;">
                    <h4 class="mb-0"><i class="fas fa-exchange-alt"></i> Create New Transaction</h4>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    <div class="alert alert-info mb-4" role="alert" style="border-radius: 10px; border-left: 4px solid #2F527A;">
                        <strong><i class="fas fa-wallet"></i> Account:</strong> @ViewBag.AccountNumber - @ViewBag.AccountName<br />
                        <strong><i class="fas fa-user"></i> Account Holder:</strong> @ViewBag.PersonName<br />
                        <strong><i class="fas fa-money-bill-wave"></i> Current Balance:</strong>
                        <span class="@(ViewBag.CurrentBalance >= 0 ? "text-success" : "text-danger")">
                            @(((decimal)ViewBag.CurrentBalance).ToString("C2"))
                        </span>
                    </div>

                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="AccountId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="TransactionDate" class="form-label"></label>
                            <input asp-for="TransactionDate" type="date" class="form-control" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="TransactionDate" class="text-danger"></span>
                            <small class="form-text text-muted">Transaction date cannot be in the future</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DebitAmount" class="form-label text-danger">
                                    <i class="fas fa-minus-circle"></i> Debit Amount (Money Out)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">R</span>
                                    <input asp-for="DebitAmount" type="number" step="0.01" class="form-control"
                                           placeholder="0.00" id="debitInput" />
                                </div>
                                <span asp-validation-for="DebitAmount" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CreditAmount" class="form-label text-success">
                                    <i class="fas fa-plus-circle"></i> Credit Amount (Money In)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">R</span>
                                    <input asp-for="CreditAmount" type="number" step="0.01" class="form-control"
                                           placeholder="0.00" id="creditInput" />
                                </div>
                                <span asp-validation-for="CreditAmount" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-warning" role="alert" style="border-radius: 10px; border-left: 4px solid #f57c00;">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Important:</strong> Enter either a Debit OR Credit amount, not both.
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="Enter transaction description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Accounts" asp-action="Details" asp-route-id="@Model.AccountId"
                               class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn" style="background-color: #2F527A; color: white;">
                                <i class="fas fa-save"></i> Create Transaction
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-3" style="background-color: #f8f9fa; border-radius: 15px; border: none;">
                <div class="card-body">
                    <h6><i class="fas fa-info-circle" style="color: #2F527A"></i> Transaction Rules:</h6>
                    <ul class="mb-0 small">
                        <li>Transaction date cannot be in the future</li>
                        <li>Amount cannot be zero</li>
                        <li>Enter either debit OR credit, not both</li>
                        <li>Account balance will be updated automatically</li>
                        <li>Capture date is set automatically</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Clear credit when debit is entered
        document.getElementById('debitInput').addEventListener('input', function() {
            if (this.value > 0) {
                document.getElementById('creditInput').value = '0';
            }
        });

        // Clear debit when credit is entered
        document.getElementById('creditInput').addEventListener('input', function() {
            if (this.value > 0) {
                document.getElementById('debitInput').value = '0';
            }
        });
    </script>
}