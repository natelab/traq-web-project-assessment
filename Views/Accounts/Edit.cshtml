@model traq_web_project_assessment.ViewModels.AccountViewModel

@{
    ViewData["Title"] = "Edit Account";
}

<div class="container" style="background-color: #e9ecef; padding: 40px; min-height: 100vh; border-radius: 15px;">
    <div class="mb-4">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary" style="border-radius: 10px;">
            <i class="fas fa-arrow-left"></i> Back to Account Details
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow" style="border-radius: 15px; border: none; background-color: white;">
                <div class="card-header" style="background-color: #f57c00; color: white; border-radius: 15px 15px 0 0;">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Edit Account</h4>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    <div class="alert alert-info mb-4" role="alert" style="border-radius: 10px; border-left: 4px solid #2F527A;">
                        <i class="fas fa-info-circle"></i>
                        <strong>Account for:</strong> @Model.PersonName
                    </div>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PersonId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="AccountNumber" class="form-label"></label>
                            <input asp-for="AccountNumber" class="form-control" />
                            <span asp-validation-for="AccountNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccountName" class="form-label"></label>
                            <input asp-for="AccountName" class="form-control" />
                            <span asp-validation-for="AccountName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Outstanding Balance</label>
                            <input type="text" class="form-control" value="@Model.OutstandingBalance.ToString("C2")" disabled readonly />
                            <small class="form-text text-muted">
                                <i class="fas fa-lock"></i> Balance is automatically calculated from transactions and cannot be edited manually.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <input type="text" class="form-control" value="@Model.StatusName" disabled readonly />
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle"></i> Use the "Close Account" button on the details page to change status.
                            </small>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}