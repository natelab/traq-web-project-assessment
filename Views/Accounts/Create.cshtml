@model traq_web_project_assessment.ViewModels.AccountViewModel

@{
    ViewData["Title"] = "Create Account";
}

<div class="container" style="background-color: #e9ecef; padding: 40px; min-height: 100vh; border-radius: 15px;">
    <div class="mb-4">
        <a asp-controller="Persons" asp-action="Details" asp-route-id="@Model.PersonId" class="btn btn-secondary" style="border-radius: 10px;">
            <i class="fas fa-arrow-left"></i> Back to Person
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow" style="border-radius: 15px; border: none; background-color: white;">
                <div class="card-header text-white" style="background-color: #2F527A; border-radius: 15px 15px 0 0;">
                    <h4 class="mb-0"><i class="fas fa-wallet"></i> Create New Account</h4>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    <div class="alert alert-info mb-4" role="alert" style="border-radius: 10px; border-left: 4px solid #2F527A;">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Account for:</strong> @ViewBag.PersonName
                    </div>

                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="PersonId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="AccountNumber" class="form-label"></label>
                            <input asp-for="AccountNumber" class="form-control" placeholder="Enter account number" />
                            <span asp-validation-for="AccountNumber" class="text-danger"></span>
                            <small class="form-text text-muted">Must be unique</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccountName" class="form-label"></label>
                            <input asp-for="AccountName" class="form-control" placeholder="Enter account name or description" />
                            <span asp-validation-for="AccountName" class="text-danger"></span>
                        </div>

                        <div class="alert alert-warning" role="alert" style="border-radius: 10px; border-left: 4px solid #f57c00;">
                            <i class="fas fa-info-circle"></i> 
                            <strong>Note:</strong> The account will be created with:
                            <ul class="mb-0 mt-2">
                                <li>Initial balance: R 0.00</li>
                                <li>Status: Open</li>
                            </ul>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Persons" asp-action="Details" asp-route-id="@Model.PersonId" 
                               class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn" style="background-color: #2F527A; color: white;">
                                <i class="fas fa-save"></i> Create Account
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-3" role="alert" style="border-radius: 10px; border-left: 4px solid #2F527A; background-color: white;">
                <i class="fas fa-info-circle"></i> 
                <strong>Tip:</strong> After creating the account, you can add transactions from the account details page.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}