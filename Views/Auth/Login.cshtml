@model traq_web_project_assessment.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="background-color: #e9ecef; padding: 40px; min-height: 100vh; border-radius: 15px;">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow" style="border-radius: 15px; border: none; background-color: white;">
                <div class="card-body" style="padding: 2.5rem;">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-4x mb-3" style="color: #2F527A"></i>
                        <h2 class="mt-3">Login</h2>
                        <p class="text-muted">Sign in to access the system</p>
                    </div>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">
                                <i class="fas fa-user" style="color: #2F527A"></i> Username
                            </label>
                            <input asp-for="Username" class="form-control" placeholder="Enter your username" autofocus />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock" style="color: #2F527A"></i> Password
                            </label>
                            <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">
                                Remember Me
                            </label>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-lg" style="background-color: #2F527A; border-color: #2F527A; color: white;">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-muted mb-2"><i class="fas fa-key" style="color: #2F527A"></i> Default Admin Account:</p>
                        <p class="mb-0"><small><strong>Username:</strong> admin</small></p>
                        <p class="mb-0"><small><strong>Password:</strong> Admin123</small></p>
                    </div>

                    @* Uncomment if you want registration
                    <div class="text-center mt-3">
                        <p class="mb-0">
                            Don't have an account? 
                            <a asp-action="Register" class="text-decoration-none">Register here</a>
                        </p>
                    </div>
                    *@
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}